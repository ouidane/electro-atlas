{
  "name": "backend",
  "version": "1.0.0",
  "description": "Electro Atlas API",
  "main": "index.js",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "build:schema": "npm run generate:openapi && npm run generate:types && npm run copy:schema",
    "generate:openapi": "swagger-jsdoc -d src/routes/v1/definition.yaml src/routes/v1/*.ts \"src/routes/v1/!(definition).yaml\" -o src/schemas/openapi.json",
    "generate:types": "openapi-typescript src/schemas/openapi.json -o src/schemas/index.d.ts",
    "copy:schema": "copyfiles -u 1 src/schemas/*.json dist",
    "copy:templates": "copyfiles -u 1 src/templates/*.ejs dist",
    "build": "tsc && npm run build:schema && npm run copy:templates",
    "test": "jest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rimraf dist",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "Ouidane Zakaria",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cloudinary": "^2.6.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-openapi-validator": "^5.5.7",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "mongoose-aggregate-paginate-v2": "^1.1.4",
    "mongoose-lean-virtuals": "^2.0.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "qs": "^6.14.0",
    "redis": "^5.5.6",
    "sharp": "^0.34.2",
    "stripe": "^18.2.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "overrides": {
    "eslint": "^9.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.2",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
