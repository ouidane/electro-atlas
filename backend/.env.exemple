# Application environment (e.g., dev, production)
NODE_ENV=dev

# JSON Web Token (JWT) secrets for authentication
JWT_SECRET_KEY=jwt_secret_key
JWT_REFRESH_SECRET=jwt_refresh_secret
JWT_ACCESS_SECRET=jwt_access_secret

# Database connection credentials
DB_USER=database_user
DB_PASSWORD=database_password
DB_HOST=database_host
DB_NAME=database_name

# Google OAuth credentials
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret

# Node Mailer configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=email@example.com
MAIL_PASSWORD=email_password

# Redis configuration
RADIS_USERNAME=default
REDIS_PASSWORD=redis_password
REDIS_HOST=redis_host
REDIS_PORT=16849

# Stripe payment gateway credentials
STRIPE_KEY=stripe_key
STRIPE_ENDPOINT_SECRET=stripe_endpoint_secret

# Cloudinary configuration for image uploads
CLOUD_NAME=cloudinary_cloud_name
API_KEY=cloudinary_api_key
API_SECRET=cloudinary_api_secret

# Debug mode (set to true for development)
DEBUG=true

# Logging level (e.g., debug, info, error)
LOG_LEVEL=debug

# Port for the backend server
PORT=5000

# URLs for client applications
CLIENT_URL=http://localhost:3000

# Base URL for backend API
BASE_URL=http://localhost:5000
